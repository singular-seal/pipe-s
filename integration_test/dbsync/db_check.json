{
  "Task": {
    "ID": "MysqlCheck",
    "LogPath": ".",
    "StateStore": {
      "ID": "default",
      "Type": "file",
      "Path": "db_check_state_store.data",
      "SaveIntervalMS": 10000
    },
    "Pipeline": {
      "ID": "hello-world-pipeline",
      "Type": "DisruptorPipeline",
      "BufferSize": 262144,
      "Input": {
        "Type": "MysqlScanInput",
        "Host": "192.168.18.14",
        "Port": 3306,
        "User": "admin",
        "Password": "admin",
        "TableNameRegex":"^pipes_test_db.*"
      },
      "Processors": [
        {
          "Type": "MysqlDMLToDBChangeConverter"
        },
        {
          "Type": "DBChangeMappingProcessor",
          "TableNamePattern": "^([a-z]+)\\d+$",
          "Mappings": [
            {
              "Source": {
                "DB": "pipes_test_db"
              },
              "Target": {
                "DB": "pipes_dest_db"
              }
            }
          ]
        }
      ],
      "Output": {
        "Type": "MysqlCheckOutput",
        "Host": "192.168.18.14",
        "Port": 3307,
        "User": "root",
        "Password": "root",
        "ResultFilePath": "check_result.txt"
      }
    }
  }
}