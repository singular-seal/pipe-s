{
  "Task": {
    "ID": "db_sync",
    "LogPath": "/Users/xxx/development",
    "StateStore": {
      "ID": "default",
      "Type": "file",
      "Path": "/Users/xxx/development/1.data",
      "SyncIntervalMS": 10000
    },
    "PProfPort": 7777,
    "Metrics": {
      "Port": 7778
    },
    "Pipeline": {
      "ID": "hello-world-pipeline",
      "Type": "DisruptorPipeline",
      "BufferSize": 262144,
      "Input": {
        "Type": "MysqlBinlogInput",
        "Address": "192.168.18.14:3306",
        "User": "admin",
        "Password": "admin",
        "ReplicationMode": "filepos"
      },
      "Processors": [
        {
          "Type": "MysqlDMLFilter",
          "FullTableNamePattern": "^test_db.*"
        },
        {
          "Type": "LogicalNameCatcher",
          "DBNamePattern": ".*",
          "DBNameVariable": "logicalDB",
          "TableNamePattern": "^([a-z]+)\\d+$",
          "TableNameVariable": "logicalTable"
        },
        {
          "Type": "MysqlDMLToDBChangeConverter"
        },
        {
          "Type": "DBChangeMappingProcessor",
          "DBNameVariable": "logicalDB",
          "Mappings": [
            {
              "Source": {
                "DB": "test_db"
              },
              "Target": {
                "DB": "test_dest_db"
              }
            }
          ]
        }
      ],
      "Output": {
        "Type": "MysqlBatchOutput",
        "Host": "192.168.18.14",
        "Port": 3307,
        "User": "root",
        "Password": "root",
        "TableConcurrency": 1,
        "FlushIntervalMS": 1000,
        "FlushBatchSize": 1000
      }
    }
  }
}
