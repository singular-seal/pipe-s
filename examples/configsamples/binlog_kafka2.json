{
  "Task": {
    "ID": "binlog_kafka",
    "LogPath": "/Users/xxx",
    "StateStore": {
      "ID": "default",
      "Type": "file",
      "Path": "/Users/xxx/1.data",
      "SyncIntervalMS": 15000
    },
    "Pipeline": {
      "ID": "kafka-writer-pipeline",
      "Type": "DisruptorPipeline",
      "Input": {
        "Type": "MySQLInput",
        "Address": "localhost:3306",
        "User": "root",
        "Password": "root"
      },
      "Processors": [
        {
          "Type": "MysqlDMLToDBChangeConverter"
        },
        {
          "Type": "LogicalNameCatcher",
          "TableNamePattern": "^([a-z]+)\\d+$",
          "TableNameVariable": "LogicalTable"
        },
        {
          "Type": "ColumnValueProcessor",
          "TableNameVariable": "LogicalTable",
          "TableColumnMappings": {
            "order_tab": "order_id",
            "account_tab": "account_id"
          },
          "OutputVariable": "PartitionKey"
        },
        {
          "Type": "ValueMapper",
          "InputVariable": "LogicalTable",
          "OutputVariable": "TopicName",
          "Mappings": {
            "order_tab": "order_topic",
            "account_tab": "account_topic"
          }
        },
        {
          "Type": "JsonMarshaller"
        }
      ],
      "Output": {
        "KeyVariable": "PartitionKey",
        "TopicVariable": "TopicName",
        "ServerAddresses": [
          "1.1.1.3:1111",
          "2.2.2.4:2222"
        ],
        "Type": "KafkaOutput"
      }
    }
  }
}
